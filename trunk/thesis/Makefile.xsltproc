PROC=xsltproc

html/%.html: $(SOURCES)
	cp $(IMAGES) html
	cp $(CSS) html
	$(PROC) --output $@ $(HTMLXSLT) $< 
	
chunked-html/index.html: $(SOURCES)
	cp $(IMAGES) chunked-html
	cp $(CSS) chunked-html
	$(PROC) --output $@ $(CHUNKEDHTMLXSLT) $< 
	
	
fo/%.fo: $(SOURCES)
	$(PROC) --docbook --output $@ $(FOXSLT) $< 

pdf/thesis.pdf: $(SOURCES)
	$(FOP) -xsl $(FOXSLT) -xml thesis.xml -pdf $@

ps/%.ps: $(SOURCES)
	$(PROC) --docbook --output $@ $(FOXSLT) $< 

